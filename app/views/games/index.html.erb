<div class="games-page">
  <div class="games-content">

    <!-- Header -->
    <div class="games-header">
      <h1>Parties en cours</h1>

      <%= button_to "➕ Nouvelle partie",
            games_path,
            method: :post,
            class: "new-game-btn" %>
    </div>

    <!-- Si aucune partie -->
    <% if @games.empty? %>

      <div class="empty-state">
        <h4>Aucune partie en cours</h4>
        <p>Commence une nouvelle aventure fantastique !</p>

        <%= button_to "➕ Démarrer une nouvelle partie",
              games_path,
              method: :post,
              class: "start-game-btn" %>
      </div>

    <% else %>

      <!-- Grid de parties -->
      <div class="games-grid">
        <% @games.each do |game| %>
          <% variant = rand(1..10) %>
          <div class="game-card game-variant-<%= variant %>">

            <div class="game-card-header">
              <h5 class="game-id">Partie #<%= game.id %></h5>
            </div>

            <div class="game-info">
              <div class="game-detail scenario">
                <div class="detail-label">Scénario</div>
                <div class="detail-value">
                  <%= game.scenario&.title || "Non défini" %>
                </div>
              </div>

              <div class="game-detail character">
                <div class="detail-label">Personnage</div>
                <div class="detail-value">
                  <%= game.character&.name || "Non défini" %>
                </div>
              </div>
            </div>

            <%= link_to "▶ Continuer",
                game_path(game),
                class: "continue-btn" %>

          </div>
        <% end %>
      </div>

      <!-- Back button -->
      <%= link_to characters_games_path, class: "btn-back" do %>
        ← Retour aux personnages
      <% end %>

    <% end %>

  </div>
</div>