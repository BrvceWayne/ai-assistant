<%= render 'shared/loading_spinner' %>

<div class="games-page">
  <div class="games-content">

    <!-- Header -->
    <div class="games-header">
      <h1>Parties en cours</h1>

      <%= link_to "‚ûï Nouvelle partie",
            scenarios_games_path,
            class: "new-game-btn" %>
    </div>

    <!-- Si aucune partie -->
    <% if @games.empty? %>

      <div class="empty-state">
        <h4>Aucune partie en cours</h4>
        <p>Commence une nouvelle aventure fantastique !</p>

        <%= link_to "‚ûï D√©marrer une nouvelle partie",
              scenarios_games_path,
              class: "start-game-btn" %>
      </div>

    <% else %>

      <!-- Grid de parties -->
      <div class="games-grid">
        <% @games.each do |game| %>
          <% variant = rand(1..10) %>
          <div class="game-card game-variant-<%= variant %>">

            <div class="game-card-header">
              <h5 class="game-id">Partie #<%= game.id %></h5>
              <%= button_to "üóëÔ∏è",
            game_path(game),
            method: :delete,
            data: { turbo_confirm: "√ätes-vous s√ªr de vouloir supprimer cette partie ?" },
            class: "btn-delete-game" %>
            </div>

            <div class="game-info">
              <div class="game-detail scenario">
                <div class="detail-label">Sc√©nario</div>
                <div class="detail-value">
                  <%= game.scenario&.title || "Non d√©fini" %>
                </div>
              </div>

              <div class="game-detail character">
                <div class="detail-label">Personnage</div>
                <div class="detail-value">
                  <%= game.character&.name || "Non d√©fini" %>
                </div>
              </div>
            </div>

            <%= link_to "‚ñ∂ Continuer",
                game_path(game),
                class: "continue-btn" %>

          </div>
        <% end %>
      </div>

      <!-- Back button -->
      <%= link_to characters_games_path(scenario_id: Scenario.first.id), class: "btn-back" do %>
        ‚Üê Retour aux personnages
      <% end %>

    <% end %>

  </div>
</div>

<script>
  // Cacher le spinner au chargement de la page index
  document.addEventListener('DOMContentLoaded', function() {
    const spinner = document.getElementById('loadingOverlay');
    if (spinner) {
      spinner.style.display = 'none';
    }
  });

  // Afficher le spinner quand on clique sur "Continuer"
  document.querySelectorAll('.continue-btn').forEach(function(btn) {
    btn.addEventListener('click', function() {
      const spinner = document.getElementById('loadingOverlay');
      if (spinner) {
        spinner.style.display = 'flex';
      }
    });
  });

  // Afficher spinner quand on clique "Nouvelle partie"
  const newGameBtn = document.querySelector('.new-game-btn');
  if (newGameBtn) {
    newGameBtn.addEventListener('click', function() {
      const spinner = document.getElementById('loadingOverlay');
      if (spinner) {
        spinner.style.display = 'flex';
      }
    });
  }
</script>
