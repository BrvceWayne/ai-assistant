<div class="scenario-page">
  <div class="pixel-grid"></div>

  <div class="scenario-content">
    <!-- Header -->
    <div class="scenario-header">
      <h1 class="pixel-title-small">
        CHOISISSEZ<span class="title-sword-small">⚔</span>VOTRE AVENTURE
      </h1>
      <p class="subtitle">Sélectionnez un scénario</p>
    </div>

    <!-- Scenarios Grid -->
    <div class="scenarios-grid">
      <% @scenarios.each do |scenario| %>
        <%= link_to characters_games_path,
            class: "scenario-card",
            data: { turbo: false } do %>
          <div class="scenario-card-inner">
            <h3 class="scenario-title"><%= scenario.title %></h3>
            <p class="scenario-description"><%= scenario.description %></p>
            <div class="scenario-arrow">→</div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Back button -->
    <%= link_to root_path, class: "btn-back" do %>
      ← Retour
    <% end %>
  </div>
</div>
