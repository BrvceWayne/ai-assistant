<%# app/views/characters/show.html.erb %>


<div class="character-page">
  <div class="pixel-grid"></div>

  <div class="character-content">
    <!-- Header -->
    <div class="character-header">
      <h1 class="pixel-title-small">
        CHOISISSEZ<span class="title-sword-small">⚔</span>VOTRE HÉROS
      </h1>
      <p class="subtitle">Sélectionnez votre personnage</p>

      <!-- Scenario choisi -->
      <div class="scenario-badge">
        <span class="badge-label">Scénario :</span>
        <span class="badge-value"><%= @scenario.title %></span>
      </div>
    </div>

    <!-- Characters Grid -->
    <div class="characters-grid">
      <% @characters.each do |character| %>
        <%= link_to games_path(scenario_id: @scenario.id, character_id: character.id),
            method: :post,
            class: "character-card character-#{character.class_type}",
            data: { turbo: false } do %>

          <div class="character-header-card">
            <h3 class="character-name"><%= character.name %></h3>
            <span class="character-class"><%= character.class_type.upcase %></span>
          </div>

          <div class="character-stats">
            <div class="stat">
              <span class="stat-icon">❤️</span>
              <span class="stat-label">PV</span>
              <span class="stat-value"><%= character.health %></span>
            </div>

            <div class="stat">
              <span class="stat-icon">✨</span>
              <span class="stat-label">Mana</span>
              <span class="stat-value"><%= character.mana %></span>
            </div>

            <div class="stat">
              <span class="stat-icon">⚔️</span>
              <span class="stat-label">Force</span>
              <span class="stat-value"><%= character.strength %></span>
            </div>
          </div>

          <div class="character-quirks">
            <p class="quirks-label">Particularités :</p>
            <p class="quirks-text"><%= character.quirks %></p>
          </div>

          <div class="character-select-btn">
            CHOISIR →
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Back button -->
   <%= link_to scenarios_games_path, class: "btn-back" do %>
  ← Retour aux scénarios
<% end %>
  </div>
</div>
